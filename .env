# Environment Configuration
# Base URL for tests
BASE_URL=https://www.amazon.in

# Timeout settings (in milliseconds)
TIMEOUT=60000
NAV_TIMEOUT=45000

# Retry configuration
RETRIES=1
RETRY_ON_NETWORK=true

# Browser settings
HEADLESS=true
SLOWMO=0
VIEWPORT_WIDTH=1280
VIEWPORT_HEIGHT=720

# Logging
LOG_LEVEL=info
LOG_DIR=logs

# Reporting
REPORT_DIR=playwright-report
ENABLE_ALLURE=false
ALLURE_DIR=allure-results

# Trace, screenshot, video settings
TRACE=on-first-retry
SCREENSHOT=only-on-failure
VIDEO=retain-on-failure

# Environment
ENV=test

# Email reporting settings (uncomment and fill with Mailtrap credentials or real SMTP)
EMAIL_HOST=smtp.mailtrap.io
EMAIL_PORT=2525
EMAIL_SECURE=false
EMAIL_USER=<your-mailtrap-user>
EMAIL_PASS=<your-mailtrap-pass>
EMAIL_FROM=playwright@automationtest.com
EMAIL_TO=gvk641995@gmail.com
